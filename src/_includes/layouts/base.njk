<!DOCTYPE html>
<html lang="{{ page.lang }}" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>{% if title %}{{ title }} - {% endif %}{{ site.title }}</title>

    <meta name="description" content="{{ description or site.description }}">
    <meta name="author" content="{{ author or site.author }}">

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="{{ og.type or 'website' }}">
    <meta property="og:title" content="{{ title or site.title }}">
    <meta property="og:description" content="{{ description or site.description }}">
    <meta property="og:url" content="{{ site.url }}{{ page.url }}">
    {% if image or site.image %}
        <meta property="og:image" content="{{ site.url }}{{ image or site.image }}">
    {% endif %}

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ title or site.title }}">
    <meta name="twitter:description" content="{{ description }}">
    {% if image or site.image %}
        <meta name="twitter:image" content="{{ site.url }}{{ image or site.image }}">
    {% endif %}

    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">

    <link rel="canonical" href="{{ site.url }}{{ page.url }}">
    <link rel="alternate" hreflang="{{ page.lang }}" href="{{ site.url }}{{ page.url }}">
    {%- for link in page.url | locale_links %}
        <link rel="alternate" hreflang="{{ link.lang }}" href="{{ site.url }}{{link.url}}">
    {%- endfor -%}

    <link rel="stylesheet" href="/main.css">
    {% block extraHead %}{% endblock %}
</head>
<body class="h-full flex flex-col bg-yg-neutral-50 text-yg-neutral-700 font-sans">

    {% include "components/header.njk" %}

    <main id="main" class="flex-grow flex flex-col" role="main">
        <div class="flex-grow">
            <div class="max-w-4xl mx-auto w-full px-4 py-8">
                <div class="prose prose-lg prose-headings:text-yg-black prose-li:text-yg-black prose-p:text-yg-black prose-hr:border-yg-black">
                    {% block content %}
                        {{ content | safe }}
                    {% endblock %}
                </div>
            </div>

            <div class="border-t border-yg-black">
                <div class="">
                    <script type="text/javascript">
                        (function () {
                            var u =
                                "https://spenden.twingle.de/embed/mas-de-cosme/test-project/tw68a8529fd89b8/widget";
                            var id = "_" + Math.random().toString(36).substr(2, 9);
                            var d = document,
                                g = d.createElement("script"),
                                s = d.getElementsByTagName("script")[0],
                                t = d.createElement("div");
                            t.id = "twingle-public-embed-" + id;
                            t.className = "rounded-lg overflow-hidden shadow-sm";
                            document.currentScript.after(t);
                            g.type = "text/javascript";
                            g.async = true;
                            g.defer = true;
                            g.src = u + "/" + id;
                            s.parentNode.insertBefore(g, s);
                        })();
                    </script>
                </div>
            </div>
        </div>
    </main>

    {% include "components/footer.njk" %}

    {% block extraBody %}{% endblock %}
</body>
</html>
